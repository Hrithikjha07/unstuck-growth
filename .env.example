NODE_ENV=development
PORT=3000

# Authentication & Security
# Generate a strong secret: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=generate-a-strong-random-secret-key-minimum-32-chars
JWT_EXPIRY=7d
SESSION_SECRET=generate-another-strong-random-secret-different-from-jwt

# Database - uncomment for MongoDB integration
# MONGODB_URI=mongodb://localhost:27017/unstuck-growth

# Google Sheets configuration - for form storage
USERS_SHEET_ID=your-google-sheet-id-for-users
FORMS_SHEET_ID=your-google-sheet-id-for-forms

# Email configuration (use an app password for Gmail)
# For Gmail, go to: Google Account > Security > App passwords
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-specific-password-not-regular-password
ADMIN_EMAIL=admin@example.com

# WhatsApp configuration - CallMeBot (Free)
# Send "I allow callmebot to send me messages" to +34 603 21 25 97 on WhatsApp
# More info: https://www.callmebot.com/blog/free-api-whatsapp-messages/
CALLMEBOT_API_KEY=your-callmebot-api-key
ADMIN_PHONE=+1234567890  # with country code

# Security Settings
ENABLE_RATE_LIMIT=true
MAX_REQUESTS_PER_IP=100
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes 